# ==============================================
# Padho Abhi - Environment Variables Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Django Settings
# ---------------
# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here-minimum-50-characters

# Set to False in production
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
# ----------------------
# For SQLite (default):
# DATABASE_URL=sqlite:///db.sqlite3
# 
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgres://user:password@host:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# AI Service Configuration
# ------------------------
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Neon Auth Configuration
# -----------------------
# Neon Auth base URL (used to derive JWKS endpoint)
NEON_AUTH_URL=https://ep-holy-bar-ahf3gahx.neonauth.c-3.us-east-1.aws.neon.tech/neondb/auth
# Optional overrides if needed:
# NEON_AUTH_JWKS_URL=https://.../.well-known/jwks.json
# NEON_AUTH_ISSUER=https://.../neondb/auth
# NEON_AUTH_AUDIENCE=

# CORS Configuration
# ------------------
# Comma-separated list of allowed origins for CORS
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings (Production)
# ------------------------------
# Set to True when using HTTPS
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Additional Security Headers
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# Logging Level
# -------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

